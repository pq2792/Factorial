#include <iostream>
using namespace std;
class factorial{
  int n,f=1;
  public:
  void input();
  void calc();
  void display();
};
void factorial :: input()
{
    cout<<"Enter a number :";
    cin>>n;
}
void factorial :: calc()
{
   int i;
   for(i=2;i<=n;i++)
   {
       f=f*i;
   }
}
void factorial :: display()
{
    cout<<"The Factorial of "<<n<<" is "<<f<<endl;
}
int main()
{
    factorial f;
    f.input();
    f.calc();
    f.display();
    return 0;
}
